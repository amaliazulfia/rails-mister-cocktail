<h1>Create your cocktail</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= simple_form_for  @cocktail  do |f| %>
        <%= f.input :name %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit "create cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
